{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "./wwwroot/js",
    "rootDir": "./Scripts/ts",
    "removeComments": false,
    "sourceMap": true,
    "target": "ES6",
    "types": [ "node", "jquery" ],
    "typeRoots": [ "node_modules/@types" ]

  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "include": [ "Scripts/ts/**/*" ]
}