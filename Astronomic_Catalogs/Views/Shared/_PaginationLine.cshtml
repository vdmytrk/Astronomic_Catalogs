@{
    int rowOnPageCatalog = Convert.ToInt32(ViewBag.RowOnPageCatalog == null ? 50 : ViewBag.RowOnPageCatalog);
    int rowCount = Convert.ToInt32(ViewBag.RowsCount == null ? 10000000 : ViewBag.RowsCount);
    int amountRowsResult = Convert.ToInt32(ViewBag.AmountRowsResult == null ? 1 : ViewBag.AmountRowsResult);
    int pageCount = (int)Math.Ceiling((double)rowCount / rowOnPageCatalog);
    string controller = ViewBag.Contorller;
}

<div class="paginationBodyBlock">
    <div value="0" hidden>0</div>
    <input class="ActualPegeNumber1" type="hidden" value="1" />
    @for (var i = 1; i <= pageCount; i++)
    {
        @if (i != amountRowsResult)
        {
            <div class="page_@i paginationCell d-inline-block" value="@i" onclick="updateCatalogData('@controller', this)">
                @i
                @if (i < pageCount)
                {
                    <span class="borderBlock">|</span>
                }
            </div>
        }
        else
        {
            @if (rowOnPageCatalog != 500)
            {
                <div class="page_@i paginationCell d-inline-block" value="@i" onclick="updateCatalogData('@controller', this)">
                    <span class="currentPage">@i</span>
                </div>
            }
            else
            {
                <div class="page_@i paginationCell d-inline-block" value="@i" onclick="updateCatalogData('@controller', this)">
                    @i
                    <span class="borderBlock">|</span>
                    <span>Row in result: @rowCount</span>
                </div>
            }
        }
    }
</div>

