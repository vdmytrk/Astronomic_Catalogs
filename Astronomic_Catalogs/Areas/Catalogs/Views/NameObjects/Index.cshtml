@model IEnumerable<Astronomic_Catalogs.Models.NameObject>

@{
    ViewData["Title"] = "Name Object";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="planetCatalogHeader">
    <h1>@ViewData["Title"] catalog.</h1>

    @if (User.IsInRole("OwnerAdministratorPower"))
    {
        <p>
            <a asp-action="Create">Create New</a>
        </p>
    }
</div>

<table class="table table-responsive table-toFixColumns-1 table-toFixRows-1 table-fixed-headers table-set-size">
    <thead>
        <tr class="tr-oun-style">
            <th>
                @Html.DisplayNameFor(model => model.Object)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            @if (User.IsInRole("OwnerAdministratorPower"))
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Object)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                @if (User.IsInRole("OwnerAdministratorPower"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
