@model IEnumerable<Astronomic_Catalogs.Models.AspNetUser>

@{
    ViewData["Title"] = "Users";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-responsive table-toFixColumns-2 table-toFixRows-1 table-fixed-headers table-set-size">
    <thead>
        <tr class="tr-oun-style">
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.UserName)</th>
            <th>Registration</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>Confirmed</th>
            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <th>Confirmed</th>
            <th>Birth</th>
            <th>TwoFactor</th>
            <th>@Html.DisplayNameFor(model => model.LockoutEnd)</th>
            <th>@Html.DisplayNameFor(model => model.LockoutEnabled)</th>
            <th>AccessFailed</th>
            <th>Roles</th>
            <th class="widthUsersClaimColum">Claims</th>
            <th>Logins</th>
            <th>Tokens</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.RegistrationDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.EmailConfirmed)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumberConfirmed)</td>
                <td>@Html.DisplayFor(modelItem => item.YearOfBirth)</td>
                <td>@Html.DisplayFor(modelItem => item.TwoFactorEnabled)</td>
                <td>@Html.DisplayFor(modelItem => item.LockoutEnd)</td>
                <td>@Html.DisplayFor(modelItem => item.LockoutEnabled)</td>
                <td>@Html.DisplayFor(modelItem => item.AccessFailedCount)</td>

                <td>
                    @if (item.UserRoles.Any())
                    {
                        @string.Join(", ", item.UserRoles.Select(ur => ur.Role.Name))
                    }
                    else
                    {
                        <span class="text-muted">No Roles</span>
                    }
                </td>
                <td class="text-wrap widthUsersClaimColum">
                    @if (item.UserClaims.Any())
                    {
                        @string.Join(", ", item.UserClaims.Select(uc => $"{uc.ClaimType}: {uc.ClaimValue}"))
                    }
                    else
                    {
                        <span class="text-muted">No Claims</span>
                    }
                </td>
                <td>
                    @if (item.UserLogins.Any())
                    {
                        @string.Join(", ", item.UserLogins.Select(ul => ul.ProviderDisplayName))
                    }
                    else
                    {
                        <span class="text-muted">No Logins</span>
                    }
                </td>
                <td>
                    @if (item.UserTokens.Any())
                    {
                        @string.Join(", ", item.UserTokens.Select(ut => ut.Name))
                    }
                    else
                    {
                        <span class="text-muted">No Tokens</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | 
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> | 
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>