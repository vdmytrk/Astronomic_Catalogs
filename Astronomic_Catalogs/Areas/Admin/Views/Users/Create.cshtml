@model Astronomic_Catalogs.Models.AspNetUser

@{
    ViewData["Title"] = "Create";
}

<h1>Create User</h1>

<h4>New User Details</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input name="password" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="EmailConfirmed" class="form-check-input" />
                <label asp-for="EmailConfirmed" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="PhoneNumberConfirmed" class="form-check-input" />
                <label asp-for="PhoneNumberConfirmed" class="form-check-label"></label>
            </div>

            <div class="form-group">
                <label asp-for="YearOfBirth" class="control-label"></label>
                <select asp-for="YearOfBirth" asp-items="@(new SelectList(ViewData["Years"] as List<int>))" class="form-control"></select>
                <span asp-validation-for="YearOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="TwoFactorEnabled" class="form-check-input" />
                <label asp-for="TwoFactorEnabled" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <label asp-for="LockoutEnd" class="control-label"></label>
                <input asp-for="LockoutEnd" class="form-control" type="datetime-local" />
                <span asp-validation-for="LockoutEnd" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="LockoutEnabled" class="form-check-input" />
                <label asp-for="LockoutEnabled" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <label asp-for="AccessFailedCount" class="control-label"></label>
                <input asp-for="AccessFailedCount" class="form-control" type="number" value="@ViewData["AccessFailedCount"]" />
                <span asp-validation-for="AccessFailedCount" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label class="control-label">Assign roles</label>
                <select class="multipleSelect form-select" name="selectedRoles" multiple>
                    @foreach (var role in (ViewData["Roles"] as SelectList ?? new SelectList(new List<AspNetUserRole>())))
                    {
                        <option value="@role.Value" selected="@role.Selected">@role.Text</option>
                    }
                </select>
                <table class="tableSelect table table-bordered table-sm m-0">
                    <tbody>
                        @foreach (var role in (ViewData["Roles"] as SelectList ?? new SelectList(new List<AspNetUserRole>())))
                        {
                            <tr>
                                <td class="text-center">
                                    <input class="check-box" type="checkbox" name="selectedRoles" value="@role.Value" />
                                </td>
                                <td>@role.Text</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <span class="text-danger">@Html.ValidationMessage("selectedRoles")</span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary" /> | 
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
