@model Astronomic_Catalogs.Models.AspNetRole

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Role</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Assign Users</label>
                <select name="selectedUsers" class="form-select" multiple>
                    @foreach (var user in ViewData["Users"] as SelectList ?? new SelectList(new List<AspNetUserRole>()))
                    {
                        <option value="@user.Value">@user.Text</option>
                    }
                </select>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
