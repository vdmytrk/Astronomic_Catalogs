@model Astronomic_Catalogs.Models.AspNetUserLogin

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>User Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginProvider" class="control-label"></label>
                <input asp-for="LoginProvider" class="form-control" />
                <span asp-validation-for="LoginProvider" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProviderKey" class="control-label"></label>
                <input asp-for="ProviderKey" class="form-control" />
                <span asp-validation-for="ProviderKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProviderDisplayName" class="control-label"></label>
                <input asp-for="ProviderDisplayName" class="form-control" />
                <span asp-validation-for="ProviderDisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> | 
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
