@model Astronomic_Catalogs.Models.AspNetUser

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="EmailConfirmed" class="form-check-input" />
                <label asp-for="EmailConfirmed" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="PhoneNumberConfirmed" class="form-check-input" />
                <label asp-for="PhoneNumberConfirmed" class="form-check-label"></label>
            </div>

            <div class="form-group">
                <label asp-for="YearOfBirth" class="control-label"></label>
                <select asp-for="YearOfBirth" asp-items="@(new SelectList(ViewData["Years"] as List<int>))" class="form-control"></select>
                <span asp-validation-for="YearOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="TwoFactorEnabled" class="form-check-input" />
                <label asp-for="TwoFactorEnabled" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <label asp-for="LockoutEnd" class="control-label"></label>
                <input asp-for="LockoutEnd" class="form-control" type="datetime-local" />
                <span asp-validation-for="LockoutEnd" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="LockoutEnabled" class="form-check-input" />
                <label asp-for="LockoutEnabled" class="form-check-label"></label>
            </div>

            <div class="mb-3">
                <label>Assign roles</label>
                <select name="selectedRoles" class="form-select" multiple>
                    @foreach (var role in (ViewData["Roles"] as SelectList ?? new SelectList(new List<AspNetUserRole>())))
                    {
                        <option value="@role.Value" selected="@(Model.UserRoles != null && Model.UserRoles.Any(r => r.RoleId == role.Value))">@role.Text</option>
                    }
                </select>
                <span class="text-danger">@Html.ValidationMessage("selectedRoles")</span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button> |
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}